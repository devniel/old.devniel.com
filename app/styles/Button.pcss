    font-family: Freight Sans, 'helvetica neue',helvetica,arial,'lucida grande',sans-serif;
    font-size: 14px;
    font-weight: 500;
    line-height: 21px;
    padding: 10px 20px 10px 20px;
    text-align: center;
    transition: all 100ms ease-out;

    &:hover {
        cursor:pointerl
    }
}

.Button.Braph-Button {
    color: #FFF;
    font-weight: bold;
    border-radius: 100px;
    background: #353F5A;
    cursor: pointer;
    font-family: Montserrat;
    font-size: 14px;
    font-weight: bold;
    line-height: 21px;
    padding: 10px 20px 10px 20px;
    text-align: center;
    transition: all 100ms ease-out;
    box-shadow: none;
    border: 0px;

    background-image : url('/img/braph.svg');
    background-position : left;
    background-repeat : no-repeat;
    background-size : 32px 32px;
    background-position-x : 5px;

    padding-left: 50px;

    &:hover {
        cursor:pointer;
        background-color: #1F2841;
    }
}

.Button.Braph-Button-Transparent {
    color: #FFF;
    font-weight: bold;
    border-radius: 100px;
    background: transparent;
    cursor: pointer;
    font-family: Montserrat;
    font-size: 14px;
    font-weight: bold;
    line-height: 21px;
    padding: 5px 10px;
    text-align: center;
    transition: all 100ms ease-out;
    box-shadow: none;
    border: 0px;

    i svg {
        fill: #FFF;
    }

    &:hover {
        cursor:pointer;
        background-color: #FFF;
        color: #556080;

        i svg {
            fill: #556080;
        }
    }
}

