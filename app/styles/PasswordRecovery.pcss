.PasswordRecovery {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.PasswordRecovery-Logo {
    width: 200px;
    margin-bottom: 50px;
}

.PasswordRecovery-Title {
    font-size: 35px;
    color: #FFF;
    font-family: Montserrat;
    margin-bottom: 30px;
}

.PasswordRecovery-Link {
    color: #FFF;
    font-family: Montserrat;
    font-size: 13px;
    font-weight: 100;
    margin-top: 20px;
    text-decoration: none;
    opacity: 0.7;

    &:hover {
        opacity: 1;
    }
}

.PasswordRecovery .Message {
    color: #FFF;
    font-family: Montserrat;
    font-size: 20px;
    margin: 10px;
}